<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context="com.example.usuario.myapplication2332323.MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="config"
        android:text="PLACA"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tv1"
        android:layout_alignEnd="@+id/tv1" />

    <TextView
        android:id="@+id/tv_placa"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="31dp"
        android:layout_alignLeft="@+id/tv1"
        android:layout_alignStart="@+id/tv1"
        android:layout_alignRight="@+id/tv1"
        android:layout_alignEnd="@+id/tv1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:onClick="acer"
        android:text="AcercaDe"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignLeft="@+id/tv_placa"
        android:layout_alignStart="@+id/tv_placa" />

    <TextView
        android:id="@+id/tv_proximo_dia"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="71dp"
        android:layout_alignRight="@+id/tv_placa"
        android:layout_alignEnd="@+id/tv_placa" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Su Placa"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="PICO Y PLACA PASTO"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pico y Placa HOY"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

</RelativeLayout>
